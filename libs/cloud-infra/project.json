{
  "name": "cloud-infra",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/cloud-infra/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/cloud-infra",
        "tsConfig": "libs/cloud-infra/tsconfig.lib.json",
        "packageJson": "libs/cloud-infra/package.json",
        "main": "libs/cloud-infra/src/index.ts",
        "assets": ["libs/cloud-infra/*.md"]
      }
    },
    "synth": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "dist/libs/cloud-infra",
        "commands": [
          "cdk synth --app 'node src/index.js' --require-approval conditional"
        ] 
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "dist/libs/cloud-infra",
        "commands": [
          "cdk deploy --app 'node src/index.js'"
        ] 
      }
    },
    "destroy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "dist/libs/cloud-infra",
        "commands": [
          "cdk destroy --app 'node src/index.js' --force"
        ] 
      }
    },
    "bootstrap": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "dist/libs/cloud-infra",
        "commands": [
          "cdk bootstrap --app 'node src/index.js'"
        ] 
      }
    }
  }
}
